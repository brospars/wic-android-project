<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fr.uga.wic.bb.pedestriandeadreckoning.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Nombre pas : "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pasText"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Yaw : "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/yawText"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp" />

        <TextView
            android:text="Pitch : "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pitchText"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Roll : "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rollText"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Lat : "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/latText"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp" />

        <TextView
            android:text="Lon : "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lonText"
            android:layout_alignParentStart="true" />

        <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/mapview"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="16dp"
            mapbox:style_url="@string/map_style"
            mapbox:zoom="12"
            />

    </LinearLayout>

</RelativeLayout>
